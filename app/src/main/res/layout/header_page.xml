<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/home_screen_header_height"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/header_background">

    <ImageView
        android:id="@+id/header_avatar"
        style="@style/headerImage"
        android:contentDescription="@string/login_screen_logo_description"
        android:src="@drawable/icon_back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/header_user_name"
        style="@style/headerTitleText"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:text="@string/header_screen_title"
        app:layout_constraintLeft_toRightOf="@id/header_avatar"
        app:layout_constraintRight_toLeftOf="@id/header_qr_code" />

    <ImageView
        android:id="@+id/header_qr_code"
        style="@style/headerImage"
        android:contentDescription="@string/login_screen_logo_description"
        android:src="@drawable/sidi_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>