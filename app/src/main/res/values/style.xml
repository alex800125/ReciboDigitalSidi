<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Login Screen -->
    <style name="loginScreenTitleText" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/login_screen_text_size_title</item>
        <item name="android:layout_marginTop">@dimen/login_screen_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/login_screen_text_title_margin_start</item>
    </style>

    <style name="loginScreenSloganText" parent="loginScreenTitleText">
        <item name="android:textSize">@dimen/login_screen_text_size_slogan</item>
        <item name="android:layout_marginStart">@dimen/login_screen_text_slogan_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/login_screen_text_slogan_margin_horizontal</item>
    </style>

    <style name="loginScreenSize" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_marginStart">@dimen/login_screen_login_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_screen_login_margin</item>
        <item name="android:layout_height">@dimen/login_screen_button_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="DefaultButton" parent="loginScreenSize">
        <item name="android:textColor">@color/login_screen_button_text</item>
        <item name="android:backgroundTint">@color/login_screen_button_background_tint</item>
    </style>

    <style name="loginScreenForgotPasswordText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/login_screen_forgot_password_text</item>
        <item name="android:text">@string/login_screen_forgot_password_text</item>
        <item name="android:textSize">@dimen/login_screen_button_forgot_password_text_size</item>
        <item name="android:layout_marginTop">@dimen/login_screen_button_forgot_password_margin_top</item>
    </style>

    <style name="loginScreenWrongUserText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/login_screen_message_wrong_user_text</item>
        <item name="android:textSize">@dimen/login_screen_message_wrong_user_text_size</item>
        <item name="android:layout_marginBottom">@dimen/login_screen_margin_bottom</item>
    </style>

    <!-- Common header -->
    <style name="headerDefault" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">@dimen/common_header_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/header_background</item>
    </style>

    <style name="headerBackButton" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/header_back_button_width</item>
        <item name="android:padding">@dimen/header_back_button_padding</item>
        <item name="android:contentDescription">@string/header_back_button</item>
        <item name="android:src">@drawable/icon_back_button</item>
    </style>

    <style name="headerTitleText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/common_header_text_size_title</item>
        <item name="android:textStyle">bold</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="headerEmpty" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_width">@dimen/common_header_width</item>
    </style>

    <!-- Create User -->
    <style name="createUserText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/create_user_text_size</item>
        <item name="android:layout_marginTop">@dimen/create_user_margin_top</item>
        <item name="android:layout_marginHorizontal">@dimen/create_user_margin_horizontal_text</item>
    </style>

    <style name="createUserEditText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">@dimen/create_user_edittext_height</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginTop">@dimen/create_user_margin_top</item>
        <item name="android:layout_marginHorizontal">@dimen/create_user_margin_horizontal_edittext</item>
    </style>

    <style name="createUserTermsServiceText" parent="createUserText">
        <item name="android:textAlignment">textStart</item>
        <item name="android:layout_marginStart">@dimen/create_user_terms_service_margin_start</item>
        <item name="android:layout_marginEnd">@dimen/create_user_terms_service_margin_end</item>
    </style>

    <!-- Home screen -->
    <style name="headerImage" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">@dimen/home_screen_header_height</item>
        <item name="android:layout_width">@dimen/home_screen_header_width</item>
        <item name="android:padding">@dimen/home_screen_header_padding</item>
    </style>

    <style name="homeScreenText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>