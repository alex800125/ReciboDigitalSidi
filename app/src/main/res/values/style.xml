<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Login Screen -->
    <style name="loginScreenTitleText" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/login_screen_text_size_title</item>
        <item name="android:layout_marginTop">@dimen/login_screen_text_margin_top</item>
        <item name="android:layout_marginStart">@dimen/login_screen_text_title_margin_start</item>
    </style>

    <style name="loginScreenSloganText" parent="loginScreenTitleText">
        <item name="android:textSize">@dimen/login_screen_text_size_slogan</item>
        <item name="android:layout_marginStart">@dimen/login_screen_text_slogan_margin_horizontal</item>
        <item name="android:layout_marginEnd">@dimen/login_screen_text_slogan_margin_horizontal</item>
    </style>

    <style name="loginScreenSize" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_marginStart">@dimen/login_screen_login_margin</item>
        <item name="android:layout_marginEnd">@dimen/login_screen_login_margin</item>
        <item name="android:layout_height">@dimen/login_screen_button_height</item>
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="loginScreenButton" parent="loginScreenSize">
        <item name="android:textColor">@color/login_screen_button_text</item>
        <item name="android:backgroundTint">@color/login_screen_button_background_tint</item>
    </style>

    <style name="loginScreenForgotPasswordText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/login_screen_forgot_password_text</item>
        <item name="android:text">@string/login_screen_forgot_password_text</item>
        <item name="android:textSize">@dimen/login_screen_button_forgot_password_text_size</item>
        <item name="android:layout_marginTop">@dimen/login_screen_button_forgot_password_margin_top</item>
    </style>

    <style name="loginScreenWrongUserText" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/login_screen_message_wrong_user_text</item>
        <item name="android:text">@string/login_screen_message_wrong_user_text</item>
        <item name="android:textSize">@dimen/login_screen_message_wrong_user_text_size</item>
        <item name="android:layout_marginBottom">@dimen/login_screen_margin_bottom</item>
    </style>

    <!-- Header - Home screen -->
    <style name="headerItem" parent="ThemeOverlay.AppCompat">
        <item name="android:layout_height">@dimen/header_height</item>
        <item name="android:layout_width">@dimen/header_width</item>
        <item name="android:padding">@dimen/header_padding</item>
    </style>

    <style name="headerHomeScreenTitleText" parent="ThemeOverlay.AppCompat">
        <item name="android:textColor">@color/default_text</item>
        <item name="android:textSize">@dimen/header_home_screen_text_size_title</item>
        <item name="android:gravity">center</item>
    </style>

</resources>