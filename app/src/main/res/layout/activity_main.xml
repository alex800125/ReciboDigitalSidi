<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <ImageView
        android:id="@+id/sidiLogo"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_screen_logo_width"
        android:contentDescription="@string/main_screen_logo_description"
        android:src="@drawable/sidi_logo"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_title"
        style="@style/mainScreenTitleText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sidiLogo" />

    <TextView
        android:id="@+id/txt_slogan"
        style="@style/mainScreenSloganText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_screen_slogan"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/txt_title" />

    <Button
        android:id="@+id/google_sign"
        android:layout_width="match_parent"
        android:layout_height="@dimen/main_screen_button_height"
        android:layout_marginStart="@dimen/main_screen_button_margin"
        android:layout_marginEnd="@dimen/main_screen_button_margin"
        android:layout_marginBottom="@dimen/main_screen_button_margin"
        android:text="@string/main_screen_button_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>